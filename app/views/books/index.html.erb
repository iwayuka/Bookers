<header>
  <h1 class="heading">Books</h1>
</header>
<body>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destory</td>
        <% end %>
    </tbody>
  </table>

  <h2>  New book</h2>
  <!-- form_with部分の追加 -->
  <%= form_with model:@book, local:true do |f| %>
    <label>Title</label>
    <%= f.text_field :title %>

    <label>Body</label>
    <%= f.text_field :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</body>

</body>